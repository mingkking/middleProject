<?xml version="1.0" encoding="UTF-8" ?>
	<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ProductDAO">

	<!-- 상품 전체 목록 조회 -->
	<select id="selectProductAll" parameterType="hashmap" resultType="vo.product.ProductVO">
		SELECT *
		FROM product
		ORDER BY pNo DESC
		<if test="startBoard != null">
			LIMIT #{startBoard}, 6
		</if>
	</select>
	
	<!-- 상품 전체 목록 조회 -->
	<select id="selectProductAllReview" resultType="vo.product.ProductVO">
		SELECT *
		FROM product
	</select>
	
	<!-- 상품 상세 조회 -->
	<select id="selectProduct" parameterType="int" resultType="vo.product.ProductVO">
		SELECT *
		FROM product
		WHERE pNo = #{pNo}
	</select>
	
	<!-- 상품 개수 -->
	<select id="selectProductCount" resultType="int">
		SELECT count(*)
		FROM product
	</select>
	
	<!-- 관리자:상품관리의 상품목록 조회 -->
	<select id="managerproduct" parameterType="vo.product.ProductVO" resultType="vo.product.ProductVO" >
		select pNo,pName,pLocation,pPrice,pInfo
		FROM product
		ORDER BY pNo
	</select>
	
	<!-- 관리자:해당 상품정보 조회  -->
	<select id="managerproductmanaging" parameterType="vo.product.ProductVO" resultType="vo.product.ProductVO">
		select pNo,pName,pLocation,pPrice,pInfo
		FROM product
		WHERE pNo = #{pNo}
	</select>
	
	<!-- 관리자 : 상품 등록 -->
	<insert id="insertProduct" parameterType="vo.product.ProductVO">
		INSERT INTO product(pName,pLocation,pPrice,pInfo)
		VALUES  (#{pName},#{pLocation},#{pPrice},#{pInfo})
	</insert>
	
	<!-- 관리자 : 상품 수정 -->
	<update id="updateProduct" parameterType="vo.product.ProductVO">
		UPDATE product SET
		pName = #{pName},
		pLocation = #{pLocation},
		pPrice = #{pPrice},
		pInfo = #{pInfo}
		WHERE pNo=#{pNo}
	</update>
	
	<!-- 관리자 : 상품 삭제 -->
	<delete id="deleteProduct" parameterType="vo.product.ProductVO" > 
	DELETE FROM product
	WHERE pNo = #{pNo}
	</delete>	
	
	
</mapper>